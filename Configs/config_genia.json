{
    "base_output_dir": "./trained_models/CoNLL-BERT-realFT-PS",
    "dataset_reader": {
        "convert_numbers": true,
        "label_indexer": {
            "label_namespace": "labels",
            "tags": [
                "DNA",
                "protein",
                "cell_type",
                "cell_line",
                "RNA"
            ]
        },
        "tag_label": "ner",
        "token_indexers": {
            "bert": {
                "do_lowercase": false,
                "pretrained_model": "./Data/embeddings/bert-base-multilingual-cased-vocab.txt",
                "type": "bert-pretrained",
                "use_starting_offsets": true
            }
        },
        "type": "WeakConll2003DatasetReader"
    },
    "evaluate_on_test": true,
    "iterator": {
        "batch_size": 32,
        "padding_noise": 0.1,
        "sorting_keys": [
            [
                "tokens",
                "bert"
            ]
        ],
        "type": "bucket"
    },
    "model": {
        "attention_word": {
            "attn_type": "sum",
            "ctxt_emb_size": 300,
            "dropout": 0.0,
            "key_emb_size": 300,
            "temperature": 1.0,
            "type": "KeyedAttention"
        },
        "encoder_word": {
            "bidirectional": true,
            "dropout": 0.5,
            "hidden_size": 150,
            "input_size": 768,
            "num_layers": 1,
            "type": "gru"
        },
        "method": "binary",
        "text_field_embedder": {
            "allow_unmatched_keys": true,
            "embedder_to_indexer_map": {
                "bert": [
                    "bert",
                    "bert-offsets"
                ]
            },
            "token_embedders": {
                "bert": {
                    "pretrained_model": "./Data/embeddings/bert-base-multilingual-cased.tar.gz",
                    "requires_grad": [
                        10,
                        11
                    ],
                    "top_layer_only": true,
                    "type": "bert-pretrained"
                }
            },
            "type": "basic"
        },
        "threshold": 0.8,
        "type": "MultiClassifier"
    },
    "segmentation": {
        "tol": 0.001,
        "type": "SymbolStopwordFilteredMultiPredictions",
        "use_probs": true,
        "visualize": true
    },
    "test_data_path": "/home/taille/these/data/genia_conll/genia_conll_test.conll",//"./Data/CoNLLData/test.txt", 
    "train_data_path": "/home/taille/these/data/genia_conll/genia_conll_train.conll",//"./Data/CoNLLData/train.txt",
    "validation_data_path": "/home/taille/these/data/genia_conll/genia_conll_test.conll",//"./Data/CoNLLData/valid.txt",
    "trainer": {
        "cuda_device": 0,
        "learning_rate_scheduler": {
            "factor": 0.5,
            "patience": 5,
            "type": "reduce_on_plateau"
        },
        "num_epochs": 50,
        "num_serialized_models_to_keep": 1,
        "optimizer": {
            "parameter_groups": [
                [
                    [
                        ".*bert.*"
                    ],
                    {
                        "lr": 0.0000002
                    }
                ],
                [
                    [
                        ".*encoder_word.*",
                        ".*attn.*",
                        ".*logit.*"
                    ],
                    {
                        "lr": 0.001
                    }
                ]
            ],
            "type": "adam"
        },
        "patience": 10,
        "validation_metric": "+accuracy"
    }
}